#!/usr/bin/env zsh
# MOTD
[ -f /etc/os-release ] && source /etc/os-release || NAME="HRLou Dotfiles"	
printf "$NAME (%s)\n" "$(zsh --version | sed 's/ (.*//g')"

CODE="${HOME}/win/AppData/Local/Programs/Microsoft VS Code/bin"
[ -d "${CODE}" ] && PATH="${PATH}:${CODE}"

# Autoload functions directory.
fpath=($ZDOTDIR/functions $fpath)
autoload -Uz $fpath[1]/*(.:t)

# Source eveything in conf.d
for _rcfile in $ZDOTDIR/conf.d/*.zsh(.N); do
  source "$_rcfile"
done
unset _rcfile

source "${ZINIT_HOME}/zinit.zsh"
zinit pack for fzf
zinit light zsh-users/zsh-syntax-highlighting
zinit light zsh-users/zsh-completions
zinit light zsh-users/zsh-autosuggestions
zinit light zsh-users/zsh-history-substring-search

bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down

(( $+commands[starship] )) && eval "$(starship init zsh)"
[ -f "$HOME/.cargo/env" ] && source "$HOME/.cargo/env"
